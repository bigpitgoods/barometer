<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Barometer" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Overriding Material3 dynamic colors to achieve a true black theme -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnSurface">@android:color/white</item>

        <!-- Force status bar and navigation bar to be black -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="Theme.Barometer" parent="Base.Theme.Barometer" />
</resources>